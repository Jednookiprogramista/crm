<div class="container">
    <h2 class="gray-header">Customer list:</h2>
</div>
<div class="container">
    <table>
        <thead>
        <tr>
            <th>
                Email:
            </th>
            <th>
                Name:
            </th>
            <th>
                Next contact date:
            </th>
        </tr>
        </thead>
        <tbody>
        {{#each clients}}
            <tr>
                <th>
                    <a href="mailto:{{this.mail}}" target="_blank">{{this.mail}}</a>
                </th>
                <td>
                    <a href="/client/{{this.id}}">{{this.name}}</a>
                </td>
                <td>
                    {{this.next}}
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>