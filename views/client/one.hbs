<div class="container">
    <h2 class="gray-header">Customer: {{client.name}}</h2>
</div>
<div class="container one-customer">
    <table>
        <tbody>
        <tr>
            <th class="gray-header">
                Email:
            </th>
            <td>
                <a href="mailto:{{client.mail}}" target="_blank">{{client.mail}}</a>
            </td>
        </tr>
        <tr>
            <th class="gray-header">
                Date of the next contact:
            </th>
            <td>
                {{client.next}}
            </td>
        </tr>
        {{#if client.notes}}
            <tr>
                <th class="gray-header">
                    Note:
                </th>
                <td>
                    {{client.notes}}
                </td>
            </tr>
        {{/if}}
        </tbody>
    </table>
    <a class="btn btn-success btn-lg large-button" href="/client">Return to the list of customers.</a>
    <a class="btn btn-outline-success btn-lg large-button" href="http://localhost:3000/
client/form/edit/{{client.id}}">Edit!</a>
</div>